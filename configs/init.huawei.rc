service iprenew_eth0 /system/bin/dhcpcd -n
class main
disabled
oneshot

service iprenew_wlan0 /system/bin/dhcpcd -n
        class main
        disabled
        oneshot

service iprenew_p2p /system/bin/dhcpcd -n
class main
disabled
oneshot

service iprenew_bnep0 /system/bin/dhcpcd -n
class main
disabled

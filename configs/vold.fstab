###################################################################
## Regular device mount
## Format: dev_mount <label> <mount_point> <part> <sysfs_path1...>
## label - Label for the volume
## mount_point - Where the volume will be mounted
## part - Partition # (1 based), or 'auto' for first usable partition.
## <sysfs_path> - List of sysfs paths to source devices
###################################################################

# "ICS seems to be hardcoded to mount to vfat filesystems"

# INTERNAL PHONE STORAGE
#dev_mount emmc /mnt/emmc 14 /devices/platform/msm_sdcc.2/mmc_host/mmc0
dev_mount emmc /HWUserData 14 /devices/platform/msm_sdcc.2/mmc_host/mmc0

# MOUNTING OF INTERNAL SDCARD
#dev_mount emmc /mnt/sdcard2 14 /devices/platform/msm_sdcc.2/mmc_host/mmc0
#dev_mount emmc /mnt/sdcard 14 /devices/platform/msm_sdcc.2/mmc_host/mmc0
#dev_mount sdcard /mnt/sdcard emmc@fat /devices/platform/msm_sdcc.2/mmc_host/mmc0

# MOUNTING OF EXTERNAL SDCARD
#dev_mount sdcard /mnt/sdcard2 auto /devices/platform/msm_sdcc.4/mmc_host/mmc2
#dev_mount sdcard /mnt/sd-ext auto /devices/platform/msm_sdcc.4/mmc_host/mmc2
#dev_mount sd-ext /mnt/sd-ext auto /devices/platform/msm_sdcc.4/mmc_host/mmc2
dev_mount sdcard /mnt/sdcard auto /devices/platform/msm_sdcc.4/mmc_host/mmc2


